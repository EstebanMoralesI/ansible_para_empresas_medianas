---
- name: Configurar HSRP ACTIVO
  hosts: equipo-hsrp-activo
  gather_facts: no
  tasks:
    - ios_config:
        lines:
          - interface vlan {{ item.hsrp_vlan }}
          - standby {{ item.hsrp_vlan }} ip {{ item.hsrp_ip }}
          - standby {{ item.hsrp_vlan }} priority {{ item.hsrp_prioridad }}
          - standby {{ item.hsrp_vlan }} preempt 
      loop: "{{ hsrp_parametros_activo }}"

- name: Configurar HSRP STANDBY
  hosts: equipo-hsrp-standby
  gather_facts: no
  tasks:
    - ios_config:
        lines:
          - interface vlan {{ item.hsrp_vlan }} 
          - standby {{ item.hsrp_numero }} ip {{ item.hsrp_ip }}       
      loop: "{{ hsrp_parametros_standby }}"
    
- name: Ejecutando el comando "show standby"
  hosts: equipo-hsrp-activo, equipo-hsrp-standby
  gather_facts: no
  tasks:
    - include_role:
        name: visualizar
      vars: 
        comando_visualizar: "show standby"